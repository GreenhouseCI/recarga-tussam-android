<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_background">

    <ProgressBar
        style="@style/ProgressBar.Tussam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:indeterminate="true"
        android:layout_marginTop="-8dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cards_spinner"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.mobivery.android.widgets.ExLabel
            android:id="@+id/card_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:textSize="17sp"
            style="@style/CommonText.Tussam"/>

        <com.mobivery.android.widgets.ExLabel
            android:id="@+id/card_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/card_name_text"
            android:gravity="right|center_vertical"
            android:textSize="17sp"
            style="@style/CommonText.Tussam"/>

        <com.mobivery.android.widgets.ExLabel
            android:id="@+id/card_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_status"
            android:layout_below="@+id/card_name_text"
            android:gravity="left|bottom"
            android:layout_toLeftOf="@+id/card_credit_text"
            style="@style/CommonText.Tussam"
            app:fontName="Roboto-Bold"/>

        <com.mobivery.android.widgets.ExLabel
            android:id="@+id/card_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:layout_below="@+id/card_status_text"
            android:gravity="left|bottom"
            android:layout_toLeftOf="@+id/card_credit_text"
            style="@style/CommonText.Tussam"
            android:layout_marginLeft="5dp"/>

        <com.mobivery.android.widgets.ExLabel
            android:id="@+id/card_credit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_credit"
            android:layout_below="@+id/card_number_text"
            android:layout_alignBottom="@id/card_type_text"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:textSize="24sp"
            style="@style/CommonText.Tussam"/>

    </RelativeLayout>


</LinearLayout><!-- From: file:/Users/claucookie/Documents/Desarrollo/Github/recarga-tussam-android/RecargaTussam/src/main/res/layout/activity_main.xml -->